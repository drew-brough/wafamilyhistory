<h1>Listing courses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Instructor</th>
    <th>Starttime</th>
    <th>Note</th>
    <th>Registration Count</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%=h course.name %></td>
    <td><%=h course.instructor %></td>
    <td><%=h course.starttime.to_s(:pretty) %></td>
    <td><%=h course.note %></td>
    <td><%=h course.registrations.count %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<h4>Lunch counts:</h4>
<ul>
  <% @lunch_counts.each do |lunch, array| %>
    <li><%= lunch %>: <%= array.size %></li>
  <% end %>
</ul>

<h4>Reserved Syllabi count:</h4>
<ul>
  <% @syllabus_counts.each do |wants_syllabus, array| %>
    <li><% if !wants_syllabus.nil? %>
      <%= wants_syllabus %>: <%= array.size %></li>
      <% else %>
      Registered before option available: <%= array.size %></li>
      <% end %>
  <% end %>
</ul>
<br />

<%= link_to 'New course', new_course_path %>