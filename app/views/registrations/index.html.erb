<h1>Listing registrations</h1>

<table>
  <tr>
    <th>Given name</th>
    <th>Surname</th>
    <th>Email</th>
    <th>Lunch</th>
    <th>Syllabus</th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%=h registration.given_name %></td>
    <td><%=h registration.surname %></td>
    <td><%=h registration.email %></td>
    <td><%=h registration.lunch %></td>
    <td><%=h registration.wants_syllabus%>
    <td><%= link_to 'Show', registration %></td>
    <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
    <td><%= link_to 'Destroy', registration, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New registration', new_registration_path %>